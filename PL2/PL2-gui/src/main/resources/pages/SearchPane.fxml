<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="root" prefHeight="300.0" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.pl2016gr2.gui.view.SearchPaneController">
    <AnchorPane GridPane.columnIndex="0" GridPane.hgrow="NEVER">
        <TableView fx:id="annotationTable" maxWidth="600.0" minWidth="600.0" prefHeight="300.0" tableMenuButtonVisible="false" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="40.0">
            <columns>
                <TableColumn fx:id="specimenIdColumn" prefWidth="120.0" text="Specimen ID" />
                <TableColumn fx:id="specimentTypeColumn" prefWidth="100.0" text="Type" />
                <TableColumn fx:id="genotypicDSTPatternColumn" prefWidth="100.0" text="genotypicDST" />
                <TableColumn fx:id="phenotypicDSTPatternColumn" prefWidth="100.0" text="phenotypicDST" />
                <TableColumn fx:id="lineageColumn" prefWidth="80.0" text="Lineage" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox id="HBox" alignment="CENTER" spacing="5.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <Label text="Filter Table:" />
            <TextField fx:id="filterField" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
        </HBox>
    </AnchorPane>
    <GridPane  GridPane.columnIndex="1" >
        <Label GridPane.columnIndex="1" GridPane.rowIndex="1" text="genotypicDSTPattern" />
        <ComboBox GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="genotypicDSTPatternComboBox" />
        <Button GridPane.columnIndex="3" GridPane.rowIndex="1" fx:id="genotypicDSTPatternButton" text="Clear" />
        <Label GridPane.columnIndex="1" GridPane.rowIndex="2" text="phenotypicDSTPattern" />
        <ComboBox GridPane.columnIndex="2" GridPane.rowIndex="2" fx:id="phenotypicDSTPatternComboBox" />
        <Button GridPane.columnIndex="3" GridPane.rowIndex="2" fx:id="phenotypicDSTPatternButton" text="Clear" />
    </GridPane>

   <columnConstraints>
      <ColumnConstraints fillWidth="false" halignment="LEFT" hgrow="NEVER" />
      <ColumnConstraints halignment="RIGHT" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
